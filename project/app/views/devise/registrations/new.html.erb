<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :username, autofocus: true, placeholder: 'Create Username'%>
  </div>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name' %>
  </div>

  <div class="field">
    <%= f.text_field :age, autofocus: true, placeholder: 'Age' %>
  </div>

  <div class="field">
    <%= f.text_field :street_address, autofocus: true, placeholder: 'Address' %>
  </div>

  <div class="field">
    <%= f.text_field :city, autofocus: true, placeholder: 'City' %>
  </div>
  <div class="field">
    <%= f.text_field :state, autofocus: true, placeholder: 'State' %>
  </div>
  <div class="field">
    <%= f.text_field :zip, autofocus: true , placeholder: 'Zip'%>
  </div>
  <div class="field">
    <label>Are you a driver or rider?</label>
  </div>
  <div class="field">
    <%= f.radio_button :driver, 'driver' %> Driver <br />
  </div>
  <div class="field">
    <%= f.radio_button :rider, 'rider' %> Rider <br />
  </div><div class="field">
    <%= f.radio_button :drivernrider, 'drivernrider' %> Both <br />
  </div>
  <div class="field">
    <label>Are you a smoker?</label>
  </div>
  <div class="field">
    <%= f.radio_button :smoker, 'smoker'%> Yes <br />
  </div>
  <div class="field">
    <%= f.radio_button :non_smoker, 'non_smoker'%> No <br />
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Create Password' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
